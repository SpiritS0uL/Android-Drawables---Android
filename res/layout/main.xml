<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">

	<TableLayout 
			android:id="@+id/main_drawable_info" 
			style="@style/DefaultTableLayoutStyle">
			<TableRow> 
				<TextView 
					style="@style/title_field"
					android:text="@string/drawables" />
				<TextView 
					style="@style/data_field"
					android:id="@+id/tvDrawables"/>
				<TextView 
					style="@style/title_field"
					android:text="@string/os" />
				<TextView 
					style="@style/data_field"
					android:id="@+id/tvOS"/>	
			</TableRow>	
	</TableLayout>
	     <LinearLayout
          android:id="@+id/main_colour_buttons"
          android:orientation="horizontal"
          android:layout_width="fill_parent"
          android:layout_height="50dip"
          android:layout_alignParentBottom="true"
          >
			<Button
               android:id="@+id/main_white"
               style="@style/white_button"/> 
            <Button 
            	android:id="@+id/main_green"
            	style="@style/green_button"	/>
			<Button
				android:id="@+id/main_orange"
				style="@style/orange_button"/>
			<Button
				android:id="@+id/main_gray"
				style="@style/gray_button"/>
		 	<Button
               android:id="@+id/main_black"
               style="@style/black_button"/>				
	</LinearLayout>
	
	<LinearLayout 
		android:orientation="vertical"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content">
		<ListView 
			android:id="@+id/main_list"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:background="@color/black"
			android:cacheColorHint="#00000000"/>
		<TextView 
			android:id="@+id/android:empty"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:gravity="center_vertical|center_horizontal"
			android:textSize="20sp" 
			android:text="@string/could_not_extract_drawables" />
	</LinearLayout>
</LinearLayout>
